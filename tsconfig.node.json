{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react",
    "target": "ESNext"
  },
  "include": ["vite.config.js", "src/**/*.jsx", "src/**/*.js"],
  "exclude": ["node_modules"]
}
